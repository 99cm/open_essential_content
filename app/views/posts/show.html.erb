<% content_for :sidebar do %>
  <%= render :partial => 'sidebar' %>
<% end %>

<div class="post">
  
  <div class="post-title">
    <h5><%= h @post.posted_at.strftime('%A %B %d, %Y').gsub(/\s0/, ' ') %></h5> 
    <h1><%=h @post.title %></h1>
  </div>
  
  <% if @post.images && !@post.images.empty? %>     
  
    <div id="photo">
      <%= image_tag(@post.images.first.attachment.url(:preview), :alt => "#{@post.title}") %>
    </div>
    
    <% if 1 < @post.images.length %>    
      <div id="thumbnails">
        <% @post.images.each_with_index do |image, index| %>
          <div class="thumbnail">	
         	  <%= link_to(image_tag(image.attachment.url(:small), :alt => "#{@post.title} - Photo #{index + 1}"), image.attachment.url(:full), :id => "photo_#{index}") %>
 	        </div>  
 	      <% end -%>
        <br class="clear"/>
      </div>  
    <% end -%>
             
  <% end %>   
  
        
  <br class="clear"/>
  
  <%= simple_format @post.body %>  
  
  <br class="clear"/>
  
  <p>
    <b>Tagged:</b><br/>
    <%= @post.tags.collect{|tag| link_to(tag.name, search_posts_path(tag.name)) }.join(", ").html_safe %>
  </p>


  <hr/>


  <%= render 'shared/products', :products => @post.products %>


</div>

<br class="clear"/>

<% content_for :head do %>
  <%= javascript_include_tag 'gallery' %>
<% end %>
