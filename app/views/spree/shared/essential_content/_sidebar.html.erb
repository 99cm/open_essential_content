<div data-hook="post-sidebar">
  <%= render 'spree/shared/essential_content/archive', posts: @archive_posts %>

  <div data-hook="post-categories">
    <h3><%= t('spree_essential_content.categories') %></h3>
    <ul>
      <% @post_categories.each do |category| %>
        <li><%= link_to "#{category.name} (#{category.posts.count})", post_category_path(@blog, category.permalink) %></li>
      <% end %>
    </ul>
  </div>

  <div data-hook="post-tag-cloud">
    <h3><%= t('spree_essential_content.tags') %></h3>
    <ul>
      <% @tags.each do |tag| %>
        <li><%= link_to "#{tag.name} (#{tag.count})", search_posts_path(@blog, tag.name) %></li>
      <% end %>
    </ul>
  </div>
</div>
