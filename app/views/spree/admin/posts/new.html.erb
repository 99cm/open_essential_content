<% content_for :page_title do %>
  <%= link_to t('spree_admin.subnav.posts'), admin_posts_path %> / <%= t('spree_essential_content.admin.post_new') %>
<% end %>

<%= render 'spree/admin/shared/error_messages', target: @post %>

<%= form_for([:admin, @post]) do |f| %>
  <fieldset>
    <%= render partial: 'form', locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>
