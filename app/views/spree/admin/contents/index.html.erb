<% content_for :page_actions do %>
  <%= button_to t('spree_essential_content.admin.content_new'), new_object_url, { class: 'btn-success', icon: 'add', id: 'admin_new_page_content' } %>
<% end %>

<%= render partial: 'spree/admin/shared/page_tabs', locals: {page: @page, current: 'Contents'} %>

<%= paginate @collection %>

<table class="table sortable" data-sortable-link="<%= update_positions_admin_page_contents_url(@page) -%>">
  <colgroup>
     <col style="width: 5%">
     <col style="width: 50%">
     <col style="width: 30%">
     <col style="width: 15%">
  </colgroup>
  <thead>
    <tr>
      <th colspan="2"><%= I18n.t('spree.essential_content.content.title') %></th>
      <th><%= I18n.t('spree_essential_content.content.context') %></th>
      <th data-hook="admin_page_contents_index_header_actions" class="actions"></th>
    </tr>
  </thead>
  <tbody>
    <%- @collection.each do |content|%>
    <tr id="<%= spree_dom_id content %>">
      <td class="move-handle text-center">
        <span class="icon icon-move handle"></span>
      </td>
      <td><%= link_to content.title, object_url(content) %></td>
      <td><%= content.context %>
      <td class="actions" data-hook="admin_page_contents_index_row_actions">
        <%= link_to_edit content, no_text: true, class: 'edit' %>
        &nbsp;
        <%= link_to_with_icon 'translate', nil, spree.admin_translations_path('contents', content.id), title: I18n.t('spree.essential.page.content.translations'), class: 'btn btn-sm btn-primary' %>
        &nbsp;
        <%= link_to_delete content, no_text: true %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @collection %>