<% content_for :page_title do %>
  <%= t('spree_essential_content.admin.upload_listing') %>
<% end %>

<% content_for :page_actions do %>
  <%= link_to_with_icon('plus', t('spree_essential_content.admin.upload_new'), new_admin_upload_url(@product), id: 'new_image_link', class: 'btn btn-success') %>
<% end %>

<div id="images" data-hook></div>

<% unless @collection.any? %>
  <div class="alert alert-info no-objects-found">
    <%= t('spree.no_resource_found', resource: plural_resource_name(Spree::Upload)) %>,
    <%= link_to t('spree.add_one'), new_object_url %>!
  </div>
<% else %>
  <%= paginate @collection %>

  <table class="table sortable">
    <thead>
      <tr>
        <th><%= t('spree.thumbnail') %></th>
        <th><%= sort_link @search, :attachment_file_name, t('spree_essential_content.upload.file_name') %></th>
        <th><%= sort_link @search, :description, t('spree.description') %></th>
        <th><%= sort_link @search, :attachment_file_size, t('spree.essential_content.upload.size') %></th>
        <th class="actions"></th>
      </tr>
    </thead>

    <% @collection.each do |upload| %>
      <tr id="<%= dom_id(upload) %>">
        <td class="thumbnail">
          <% if upload.image_content? %>
            <%= link_to image_tag(upload.attachment.url(:mini)), upload.attachment.url(:large) %>
          <% end %>
        </td>
        <td><%= link_to upload.attachment_file_name, upload.attachment.url(:original) %></td>
        <td><%= upload.alt %></td>
        <td><%= upload.attachment_file_size.to_i / 1024 %> kb</td>
        <td class="actions">
          <%= link_to_edit upload, no_text: true, class: 'edit' %> &nbsp;
          <%= link_to_delete upload, no_text: true %>
        </td>
      </tr>
    <% end %>
  </table>

  <%= paginate @collection %>
<% end %>

<% content_for :table_filter_title do %>
  <%= t('spree.search') %>
<% end %>

<% content_for :table_filter do %>
  <div data-hook="admin_uploads_index_search">
    <%= search_form_for [ :admin, @search ] do |f| %>
      <div class="field-block alpha sixteen columns">
        <div class="field">
          <%= f.label :alt_or_attachment_file_name_cont, "#{t('spree.description')} #{t('spree.or')} #{t('spree.filename')}" %>
          <%= f.text_field :alt_or_attachment_file_name_cont, size: 50 %>
        </div>
      </div>
      <div class="clearfix"></div>

      <div class="actions filter-actions">
        <div data-hook="admin_uploads_index_search_buttons">
          <%= button t('spree.filter_results'), 'search' %>
        </div>
      </div>
    <% end %>
  </div>
<% end %>

<% content_for :head do %>
  <script type="text/javascript">
    jQuery(document).ready(function(){
      jQuery('#new_image_link').click(function(event) {
        event.preventDefault();
        jQuery(this).hide();
        jQuery.ajax({type: 'GET', url: this.href, data: ({authenticity_token: AUTH_TOKEN}), success: function(r){ jQuery('#images').html(r);} });
      });
    });
  </script>
<% end %>
