<ul class="picker">
<% @uploads.each do |upload| %>
  <li>
    <% if upload.image_content? %>
      <%= link_to image_tag(main_app.url_for(upload.url(:mini))), main_app.url_for(upload.url(:original)), class: 'option image' %>
    <% else %>
      <%= link_to upload.attachment_file_name, main_app.url_for(upload.url(:original)), class: 'option file' %>
    <% end %>
  </li>
<% end %>
</ul>