<% content_for :page_title do %>
  <%= Spree.t('essential_content.admin.blog_new') %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to Spree.t('essential_content.admin.blog_manage'), admin_blogs_url, icon: 'file', id: 'admin_manage_blogs' %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @blog } %>

<%= form_for([:admin, @blog]) do |f| %>
  <fieldset class="no-border-top">
    <%= render "form", form: f %>
    <%= render partial: 'spree/admin/shared/new_resource_links' %>
  </fieldset>
<% end %>

<%= render "spree/admin/shared/select_configuration_tab" unless request.xhr? %>
