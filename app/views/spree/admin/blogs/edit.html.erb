<% content_for :page_title do %>
  <%= t('spree_essential_content.admin.blog_edit') %>
<% end %>

<% content_for :page_actions do %>
  <%= button_link_to t('spree_essential_content.admin.blog_manage'), admin_blogs_url, icon: 'file', id: 'admin_manage_blogs' %>
<% end %>

<%= render partial: 'spree/admin/shared/error_messages', locals: { target: @blog } %>

<%= form_for([:admin, @blog]) do |f| %>
  <fieldset class="no-border-top">
    <%= render "form", locals: { f: f } %>
    <%= render partial: 'spree/admin/shared/edit_resource_links' %>
  </fieldset>
<% end %>

<%= render 'spree/admin/shared/select_configuration_tab' unless request.xhr? %>
